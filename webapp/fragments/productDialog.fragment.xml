<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:t="sap.ui.table"
        xmlns:u="sap.ui.unified"
        xmlns:core="sap.ui.core">
    <Dialog id="productDialog"
            resizable="true"
            class="sapUiResponsiveContentPadding"
            contentWidth="450px"
            contentHeight="auto"
            draggable="true"
            titleAlignment="Center"
            title="Product">
		<content>   
                        <VBox>
                            <Label
                                    text="Title"
                                    required="true"
                                    labelFor="titleInput" />
                            <Input 
                                    id="titleInput"
                                    rows="12" 
                                    placeholder="Enter product title ..."
                                    value="{Product>/title}"
                                    width="100%" />   
                        </VBox> 
                        <Label
                                text="Descriptipn"
                                labelFor="descriptionArea" />
                        <TextArea 
                                id="descriptionArea"
			                    rows="8" 
				                placeholder="Enter description ..."
			                    value="{Product>/description}"
			                    width="100%" />  
                        <VBox>
                            <Label
                                    text="Picture"
                                    visible="{= !!${Login>/token}}"
                                    labelFor="fileUploader" />
                            <u:FileUploader
                                    id="fileUploader"
                                    name="myFileUpload"
                                    width="100%"
                                    change="onUploadPathChange"
                                    tooltip="Upload your file to the local server" />
                        </VBox>
                        <!-- <Button
                            text="Upload File"
                            press="handleUploadPress"/>	 -->
                        <VBox>
                            <Label
                                    text="category"
                                    labelFor="categorySelect" />	
                            <Select
                                    id="categorySelect"
                                    forceSelection="true"
                                    width="100%"
                                    selectedKey="{Product>/category}"
                                    items="{
                                        path: 'Categories>/',
                                        sorter: { path: 'Name' }
                                    }">
                                    <core:Item key="{Categories>_id}" text="{Categories>title}" />
                                </Select> 
                        </VBox>
                        <Label
                                text="price"
                                labelFor="priceInput" />	
                        <Input 
                                id="priceInput"
                                placeholder="Enter [roduct price] ..."
			                    value="{Product>/price}"
			                    width="100%" /> 

                        <Label
                                text="width"
                                labelFor="widthInput" />	
                        <Input 
                                id="widthInput"
                                placeholder="Enter product width ..."
			                    value="{Product>/attributes/width}"
			                    width="100%" />    

                        <Label
                                text="height"
                                labelFor="heightInput" />	
                        <Input 
                                id="heightInput"
                                placeholder="Enter product height ..."
			                    value="{Product>/attributes/height}"
			                    width="100%" />

                        <Label
                                text="length"
                                labelFor="lengthInput" />	
                        <Input 
                                id="lengthInput"
                                placeholder="Enter product length ..."
			                    value="{Product>/attributes/length}"
			                    width="100%" />
                        
                        <Label
                                text="weight"
                                labelFor="weightInput" />	
                        <Input 
                                id="weightInput"
                                placeholder="Enter product weight ..."
			                    value="{Product>/attributes/weight}"
			                    width="100%" />
        </content>
        <buttons>
            <Button 
                    press="onProductSaveButtonPress"
                    text="Save" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>