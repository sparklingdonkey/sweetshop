<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:t="sap.ui.table"
        xmlns:u="sap.ui.unified"
        xmlns:core="sap.ui.core">
    <Dialog id="productEditDialog"
            resizable="true"
            class="sapUiResponsiveContentPadding"
            contentWidth="450px"
            contentHeight="auto"
            draggable="true"
            titleAlignment="Center"
            title="Product">
		<content>   
                        <VBox>
                            <Label
                                    text="Title"
                                    required="true"
                                    labelFor="titleInput" />
                            <Input 
                                    id="titleInput"
                                    rows="12" 
                                    placeholder="Enter product title ..."
                                    value="{Product>/title}"
                                    width="100%" />   
                        </VBox> 
                        <Label
                                text="Descriptipn"
                                required="true"
                                labelFor="descriptionArea" />
                        <TextArea 
                                id="descriptionArea"
			                    rows="8" 
				                placeholder="Enter description ..."
			                    value="{Product>/description}"
			                    width="100%" />  
                        <VBox>
                            <Label
                                    text="Picture"
                                    required="true"
                                    labelFor="fileUploader" />
                                <HBox>
                                <u:FileUploader
                                        id="fileUploader"
                                        name="myFileUpload"
                                        width="100%"
                                        change="onUploadPathChange"
                                        tooltip="Upload your file to the local server" />
                                        <Button
                                                text="Remove current"
                                                enabled="{= !!${Product>/picture} &amp;&amp; ${Product>/picture} !== 'REMOVE' }"
                                                press="handleRemovePress"/>
                                </HBox>	
                        </VBox>
                        
                        <VBox>
                            <Label
                                    text="category"
                                    required="true"
                                    labelFor="categorySelect" />	
                                <Select
                                    id="categorySelect"
                                    forceSelection="true"
                                    width="100%"
                                    selectedKey="{Product>/category}"
                                    items="{
                                        path: 'Categories>/',
                                        sorter: { path: 'Name' }
                                    }">
                                    <core:Item key="{Categories>_id}" text="{Categories>title}" />
                                </Select> 
                        </VBox>
                        <Label
                                text="price"
                                required="true"
                                labelFor="priceInput" />	
                        <Input 
                                id="priceInput"
                                placeholder="Enter product price ..."
			                    value="{Product>/price}"
			                    width="100%" /> 

                        <Label
                                text="width"
                                required="true"
                                labelFor="widthInput" />	
                        <Input 
                                id="widthInput"
                                placeholder="Enter product width ..."
			                    value="{Product>/attributes/width}"
			                    width="100%" />    

                        <Label
                                text="height"
                                required="true"
                                labelFor="heightInput" />	
                        <Input 
                                id="heightInput"
                                placeholder="Enter product height ..."
			                    value="{Product>/attributes/height}"
			                    width="100%" />

                        <Label
                                text="length"
                                required="true"
                                labelFor="lengthInput" />	
                        <Input 
                                id="lengthInput"
                                placeholder="Enter product length ..."
			                    value="{Product>/attributes/length}"
			                    width="100%" />
                        
                        <Label
                                text="weight"
                                required="true"
                                labelFor="weightInput" />	
                        <Input 
                                id="weightInput"
                                placeholder="Enter product weight ..."
			                    value="{Product>/attributes/weight}"
			                    width="100%" />

                         <Label
                                text="Available"
                                required="true"
                                labelFor="availableSelect" />	
                        <Select
                                    id="availableSelect"
                                    forceSelection="true"
                                    width="100%"
                                    selectedKey="{Product>/available}"
                                    items="{
                                        path: 'Available>/',
                                        sorter: { path: 'title' }
                                    }">
                                    <core:Item key="{Available>key}" text="{Available>title}" />
                                </Select> 
        </content>
        <buttons>
            <Button 
                    press=".onProductSaveButtonPress"
                    text="Save" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>